<div class="container" style="margin-top: 2.5vh; background-color:transparent;">
    <div class="row" style="background-color:transparent;">
        <div class="col-md-4 offset-md-4">
            <div class="card" style="background-color: #FFCA63;">
                <div class="card-body text-center">
                    <!-- Title -->
                    <h1 class="card-title">Eat-Da-Burger</h1>
                    <!-- Text -->
                    <p class="card-text" style="font-size:1em; color: black;">
                        <i>“Eat clean to stay fit, have a burger to stay sane.”</i>
                        <span> - Gigi Hadid</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 2.5vh; margin-bottom: 2.5vh;">
        <div class="col-md-4" id="notDevoured">
            <div class="card" style="background-color: #FFCA63;">
                <div class="card-body text-center">
                    <!-- Title -->
                    <h3 class="card-title">Ready to Eat!</h3>
                    <!-- Text -->
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    {{> burgers/consume devour=false}}
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" style="background-color: #FFCA63;">
                <div class="card-body text-center">
                    <div class="md-form input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text md-addon" id="inputGroupMaterial-sizing-default">
                                <i class="fas fa-hamburger"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="" id="bughaName" aria-label="Sizing example input"
                            aria-describedby="inputGroupMaterial-sizing-default">
                    </div>
                        <button type="button" class="btn btn-deep-orange" id="createBugha">
                            <i class="fas fa-utensils"></i> Create
                        </button>
                        <p class="text-muted" style="font-size: .8em; margin-top:1.5vh;">Enter a burger and Create.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4" id="devoured">
            <div class="card" style="background-color: #FFCA63;">
                <div class="card-body text-center">
                    <!-- Title -->
                    <h3 class="card-title">Burger Heaven :</h3>
                    <!-- Text -->
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <p class="card-text text-left" style="font-size:1em; color: black;">
                        <span class="badge badge-danger">{{id}}</span> {{burger_name}}
                    </p>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

